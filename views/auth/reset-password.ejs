<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>user_Profile::<%= title%></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
    </head>
<body>
  <nav class="navbar navbar-expand-sm mb-0 rounded-top  ">
    <div class="container-fluid" style="background-color: red;">
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
            <span class="fas fa-bars" style="color:white"></span>
          </button>
          <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="nav-bar nav mx-auto">
            <li class="nav-item "><a  class="nav-link" href="/" style="color: white;">Home</a></li>
            <li class="nav-item "><a  class="nav-link" href="/login" style="color:white;">Sign in</a></li>

        </ul>
          </div>
    </div>
</nav> 
  <div class="formal">
    <form action="/reset" method="post">
     
      <h2 class="text-center">Reset Now</h2>
        <label for="">Name</label>
        <input type="text" name="name" class="form-control rounded-pill my-1">
        <% for(let error of resetErrors){
            if(error.param === 'name'){ %>
              <small class="text-danger"><%= error.msg %></small><br>
         <%   }
          } %>
         
      
        <label for="">Email</label>
        <input type="text" name="email" class="form-control rounded-pill my-1">
        <% for(let error of resetErrors){
            if(error.param === 'email'){ %>
              <small class="text-danger"><%= error.msg %></small><br>
         <%   }
          } %>
       
        <label for="">Password</label>
        <input type="password" name="password" class="form-control rounded-pill my-1">
        <% for(let error of resetErrors){
            if(error.param === 'password'){ %>
              <small class="text-danger"><%= error.msg %></small><br>
         <%   }
          } %>
  
        <label for=""> New Password</label>
        <input type="password" name="newPassword" class="form-control rounded-pill my-1">
        <% for(let error of resetErrors){
            if(error.param === 'newPassword'){ %>
              <small class="text-danger"><%= error.msg %></small><br>
         <%   }
          } %>

        <label for="">Confirm Password</label>
        <input type="password" name="conPassword" class="form-control rounded-pill my-1">
        <% for(let error of resetErrors){
            if(error.param === 'conPassword'){ %>
              <small class="text-danger"><%= error.msg %></small><br>
         <%   }
          } %>


        <button type="submit" class="btn text-danger"  style="width: 100%;">Reset!</button>
    </form>
  </div>